		      <url-pattern>/kundenverwaltung/viewKunde.jsf</url-pattern>
		      <url-pattern>/kundenverwaltung/viewKundePopup.jsf</url-pattern>
		      <url-pattern>/kundenverwaltung/desktop/viewKunde.jsf</url-pattern>
	    </web-resource-collection>
	    <auth-constraint>
	       <role-name>*</role-name>
	    </auth-constraint>
	</security-constraint>
    <security-constraint>
	    <web-resource-collection>
		      <web-resource-name>shopMitarbeiterTaetigkeiten</web-resource-name>
		      <url-pattern>/kundenverwaltung/createKunde.jsf</url-pattern>
		      <url-pattern>/artikelverwaltung/createProdukt.jsf</url-pattern>
		      <url-pattern>/artikelverwaltung/updateArtikel.jsf</url-pattern>
		      <url-pattern>/kundenverwaltung/listKunde.jsf</url-pattern>
		      <url-pattern>/kundenverwaltung/okDelete.jsf</url-pattern>
	    </web-resource-collection>
	    <auth-constraint>
		      <role-name>admin</role-name>
		      <role-name>mitarbeiter</role-name>
	    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>shopAdminTaetigkeiten</web-resource-name>
      <url-pattern>/auth/updateRollen.jsf</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
