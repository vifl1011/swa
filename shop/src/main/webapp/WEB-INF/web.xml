	<security-constraint>
	    <web-resource-collection>
	      	<web-resource-name>shopKundeTaetigkeiten</web-resource-name>
		      <url-pattern>/bestellverwaltung/chooseLieferung.jsf</url-pattern>
		      <url-pattern>/bestellverwaltung/confirmBestellung.jsf</url-pattern>
		      <url-pattern>/bestellverwaltung/viewBestellung.jsf</url-pattern>
