<?xml version="1.0"?>
<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:h="http://java.sun.com/jsf/html">

	<f:view locale="#{userLocale}">
		<f:metadata>
			<ui:insert name="metadata"/>
		</f:metadata>

		
		<h:head>
			<meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
			<meta http-equiv="language" content="#{userLocale}"/>
			<meta http-equiv="content-language" content="#{userLocale}"/>
			<meta name="language" content="#{userLocale}"/>
			<meta http-equiv="Content-Style-Type" content="text/css"/>
			<base href="#{request.contextPath}"/>
			<title>#{empty pageTitle ? 'Webshop' : pageTitle}</title>
			<h:outputStylesheet id="cssDatei" library="css" name="shop.css"/>
			<link rel="shortcut icon" type="image/x-icon" href="#{resource['images:favicon.ico']}"/>
			<meta name="author" content="J&#252;rgen Zimmermann"/>
			<meta name="copyright" content="J&#252;rgen Zimmermann"/>
			<meta name="keywords" content="Software Engineering,Beispiele,Java EE,JBoss,Eclipse,JBossTools,CDI,EJB,JAX-RS,JSON,JSF,EL,RichFaces,JPA,Bean Validation,JavaMail"/>
		</h:head>
		
		<h:body>
			<header id="header">
				<ui:insert name="header">
					<ui:include src="header.xml"/>
				</ui:insert>
			</header>
		
			<nav id="nav">
				<ui:insert name="nav">
					<ui:include src="nav.xml"/>
				</ui:insert>
			</nav>
		
			<article id="article">
				<ui:insert name="article"/>
			</article>
			
			<aside id="aside">
				<ui:insert name="aside"/>
			</aside>
		
			<footer id="footer">
				<ui:insert name="footer">
					<ui:include src="footer.xml"/>
				</ui:insert>
			</footer>
		</h:body>
	</f:view>
</html>
